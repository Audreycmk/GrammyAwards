@model GrammyAwards.Models.Award

@{
    ViewData["Title"] = "Create Award";
}

<h1>Create Award</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Category" class="control-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SongId" class="control-label">Song</label>
        <select asp-for="SongId" class="form-control" asp-items="ViewBag.Songs">
            <option value="">-- Select Song --</option>
        </select>
        <span asp-validation-for="SongId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Artist</label>
        <select class="form-control" id="ArtistId" name="ArtistId" asp-items="ViewBag.Artists">
            <option value="">-- Select Artist --</option>
        </select>
        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-control"></select>
        </div>

    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>