<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GrammyAwards</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GrammyAwards.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        /* Grammy Awards Theme */
        body {
            color: black;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(90deg, #C89B3C, #7A591E);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 24px;
            color: #fff !important;
        }

        .nav-link {
            color: #fff !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #F5C518 !important;
            }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 80px 20px;
            background: url('https://upload.wikimedia.org/wikipedia/en/8/8d/Grammy_Award_trophy.png') no-repeat center top;
            background-size: contain;
        }

            .hero h1 {
                font-size: 50px;
                font-weight: bold;
                color: #F5C518;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">🏆 Grammy Awards</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Artists" asp-action="Index">Artists</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Songs" asp-action="Index">Songs</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Awards" asp-action="Index">Awards</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <!-- API Navigation Link -->
                        <li class="nav-item"><a class="nav-link" href="/swagger">API Documentation</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="hero">
        <h1>Welcome to the Grammy Awards</h1>
        <p class="lead">Honoring excellence in music since 1959</p>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
